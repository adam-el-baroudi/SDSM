        .main-img {
            position: relative;
            background-image: url(../MEDIA/test-img.jpg);
            background-size: cover;
            background-position: center;
            
        }
        

/* couche sombre au-dessus de l’image de fond */
        .main-cnt::before {
            content: "";
            position: absolute;
            top: 0; left: 0; right: 0; bottom: 0;
            background-color: rgba(0, 0, 0, 0.4); /* ajuster l’opacité ici */
            pointer-events: none;
        }
        main h2 {
            text-align: center;
