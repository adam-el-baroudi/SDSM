        }
        /* .team-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 8%;
            padding: 20px;             
        } */
         .team-container {
            display: grid;
            grid-template-columns: repeat(3, 1fr); /* exactement 3 colonnes */
            gap: 30px; /* espace entre les colonnes */
            padding: 20px;
            justify-content: center; /* centre la grille horizontalement */
            max-width: 1000px; /* limite la largeur pour éviter qu’elle s’étale trop */
            margin: 0 auto; /* centre le conteneur dans la page */
        }


        .team {
            background-color: #f0f8ff;
            border: 1px solid #ccc;
            /* padding: 100px; */
            border-radius: 10px;
            text-align: center;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .team img{
            width: 100%;
            border-radius: 10px;
            
        }

        .team:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

        .team h3 {
            margin-bottom: 10px;
            color: #2c3e50;
        }

        .team p {
            color: #555;
            font-size: 0.95em;
        }
        @media (max-width: 768px) {
            .team-container {
                grid-template-columns: 1fr; /* une seule colonne sur mobile */
                padding: 10px;
                gap: 20px;
            }

            .team {
                padding: 10px;
            }

            .team img {
                max-width: 100%;
                height: auto;
            }

            main h2 {
                font-size: 1.5rem;
                padding: 0 10px;
            }
            main h1{
                padding: 50px 10px;
                
            }
            .main-img{
                height: 30vh;
            }
            
        }

    </style>
