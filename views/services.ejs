        .services-container {
            display: grid;
            grid-template-columns: repeat(3, 1fr); /* exactement 3 colonnes */
            gap: 30px; /* espace entre les colonnes */
            padding: 20px;
            justify-content: center; /* centre la grille horizontalement */
            max-width: 1000px; /* limite la largeur pour éviter qu’elle s’étale trop */
            margin: 0 auto; /* centre le conteneur dans la page */
        }

        .service {
            background-color: #f0f8ff;
            border: 1px solid #ccc;
            /* padding: 150px; */
            border-radius: 10px;
            text-align: center;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .service img{
            width: 100%;
            border-radius: 10px;

        }

         .service button {
            margin-bottom: 10%; 
            padding: 5% 25%; 
            border: none;
            background-color: #00c3ff;
            border-radius: 10px;
            transition: background-color 0.3s ease; /*pour une transition douce*/
        }

        .service button:hover {
            background-color:  #cccccc;
               
        }

        .service button a {
            text-decoration: none;
            color: white;
            font-size: larger;
        }
        .service button a:hover {
            
            color: black;
            
        }



        .service:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

        .service h3 {
            margin-bottom: 10px;
            color: #2c3e50;
        }

        .service p {
            color: #555;
            font-size: 0.95em;
        }
        @media screen and (max-width: 768px){
            .services-container{
                grid-template-columns: 1fr;
                gap: 20px;
                padding: 0 10px;
            }
            .service{
                padding: 8px;
                border-radius: 12px;
                background-color: white;
                overflow: hidden;
                max-width: 320px;
                margin: 0 auto;
                text-align: center;
            }
            .service img {
                width: 100%;
                max-width: 280px;
                height: 300px;
                aspect-ratio: 1 / 1;
                object-fit: cover;
                border-radius: 12px;
                display: block;
                margin: 0 auto;
            }
            .service h3 {
                font-size: 1.3rem;
                margin: 10px 0 5px;
                color: #00c3ff;
            }
            .service p {
                font-size: 0.95rem;
                color: #444;
                line-height: 1.5;
                margin-bottom: 0px;
            }
            .service button {
                background-color: #00c3ff;
                color: white;
                font-size: 0.7rem;
                padding: 3% 6%;
                border-radius: 8px;
                border: none;
                transition: background-color 0.3s ease;
                margin-top: 5%;
            }
            .service button:hover {
                background-color: #009ac0;
            }
        }
    </style>
</head>
